# Environment Configuration Template
# Copy this file to .env and update with your actual values

# ==============================================
# API Keys - Required for external model services
# ==============================================

# OpenAI API Key (for GPT-4o, GPT-4, etc.)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API Key (for Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# MiniMax API Key (for MiniMax-M2 API access)
# Get from: https://platform.minimax.io/
MINIMAX_API_KEY=your_minimax_api_key_here

# Google Cloud / Vertex AI
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1

# ==============================================
# Local Model Configuration (Optional)
# ==============================================

# vLLM Server Configuration
VLLM_HOST=localhost
VLLM_PORT=8000
VLLM_API_KEY= # Optional, if your vLLM server requires authentication

# Model Storage Path
MODEL_CACHE_DIR=./models
MINIMAX_MODEL_PATH=./models/minimax-m2

# ==============================================
# Application Configuration
# ==============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=info

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./app.db
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================
# Performance Configuration
# ==============================================

# Request Timeouts (in seconds)
REQUEST_TIMEOUT=60
READ_TIMEOUT=30
CONNECT_TIMEOUT=10

# Concurrent Request Limits
MAX_CONCURRENT_REQUESTS=10
MAX_BATCH_SIZE=16

# Memory and Storage
MAX_MEMORY_USAGE_MB=4096
MAX_CACHE_SIZE_MB=1024
CACHE_TTL_SECONDS=3600

# ==============================================
# Monitoring and Observability
# ==============================================

# Metrics Collection
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD_MS=1000

# ==============================================
# Feature Flags
# ==============================================

# Enable/disable features
ENABLE_WEBSOCKETS=true
ENABLE_STREAMING=true
ENABLE_FILE_UPLOADS=false
ENABLE_AGENT_TEMPLATES=true

# Model Features
ENABLE_LOCAL_MINIMAX=true
ENABLE_MODEL_CACHING=true
ENABLE_RESPONSE_COMPRESSION=true

# ==============================================
# Email and Notifications (Optional)
# ==============================================

# SMTP Configuration (for email notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ADMIN_EMAIL=admin@yourcompany.com

# ==============================================
# Production Deployment
# ==============================================

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load Balancer Configuration
LOAD_BALANCER_HEALTH_PATH=/health
LOAD_BALANCER_READY_PATH=/ready

# Container Configuration
CONTAINER_MEMORY_LIMIT=4g
CONTAINER_CPU_LIMIT=2

# ==============================================
# Development and Testing
# ==============================================

# Development Settings
DEBUG_MODE=false
DEV_AUTO_RELOAD=true
DEV_MOCK_APIS=false

# Test Configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_CACHE_DIR=./test_cache

# Logging for Development
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5